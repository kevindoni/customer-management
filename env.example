# Customer Management System v2.0.6
# Environment Configuration File
# Copy this file to .env and fill in your configuration values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="Customer Management System"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_VERSION=2.0.6
APP_TIMEZONE=Asia/Jakarta
APP_LOCALE=id
APP_FALLBACK_LOCALE=en

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=customer_management
DB_USERNAME=root
DB_PASSWORD=

# PostgreSQL Configuration (Alternative)
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=customer_management
# DB_USERNAME=postgres
# DB_PASSWORD=

# =============================================================================
# REDIS CONFIGURATION (Optional - for Queue & Cache)
# =============================================================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# QUEUE CONFIGURATION
# =============================================================================
QUEUE_CONNECTION=database
# QUEUE_CONNECTION=redis (if using Redis)

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_DRIVER=file
# CACHE_DRIVER=redis (if using Redis)

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# BROADCASTING CONFIGURATION
# =============================================================================
BROADCAST_DRIVER=log

# =============================================================================
# FILESYSTEM CONFIGURATION
# =============================================================================
FILESYSTEM_DISK=local

# =============================================================================
# MIKROTIK INTEGRATION
# =============================================================================
MIKROTIK_DEFAULT_TIMEOUT=30
MIKROTIK_DEFAULT_ATTEMPTS=3
MIKROTIK_BACKUP_PATH=storage/app/mikrotik/backups
MIKROTIK_MONITORING_INTERVAL=60

# =============================================================================
# WHATSAPP GATEWAY CONFIGURATION (GriyaNet)
# =============================================================================
WA_GRIYANET_API_URL=https://api.griyanet.id
WA_GRIYANET_API_KEY=
WA_GRIYANET_DEVICE_ID=
WA_GRIYANET_WEBHOOK_SECRET=
WA_GRIYANET_RATE_LIMIT=100
WA_GRIYANET_RETRY_ATTEMPTS=3

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION
# =============================================================================

# Tripay Configuration
TRIPAY_API_KEY=
TRIPAY_PRIVATE_KEY=
TRIPAY_MERCHANT_CODE=
TRIPAY_API_URL=https://tripay.co.id/api/
TRIPAY_CALLBACK_URL=

# Midtrans Configuration
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
MIDTRANS_MERCHANT_ID=
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_IS_SANITIZED=true
MIDTRANS_IS_3DS=true

# =============================================================================
# BILLING SYSTEM CONFIGURATION
# =============================================================================
BILLING_AUTO_CREATE_INVOICE=true
BILLING_REMINDER_DAYS=7
BILLING_GRACE_PERIOD_DAYS=3
BILLING_AUTO_ISOLIR=true
BILLING_ISOLIR_AFTER_DAYS=10
BILLING_DEFAULT_CURRENCY=IDR
BILLING_TAX_RATE=11
BILLING_DISCOUNT_ENABLED=true

# =============================================================================
# AUTO-ISOLIR CONFIGURATION
# =============================================================================
AUTOISOLIR_ENABLED=true
AUTOISOLIR_CHECK_INTERVAL=3600
AUTOISOLIR_NOTIFICATION_ENABLED=true
AUTOISOLIR_WHATSAPP_NOTIFICATION=true
AUTOISOLIR_EMAIL_NOTIFICATION=false

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
MONITORING_ENABLED=true
MONITORING_INTERVAL=300
MONITORING_RETENTION_DAYS=30
MONITORING_ALERT_THRESHOLD=80
MONITORING_EMAIL_ALERTS=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
SESSION_SECURE_COOKIE=false
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
PASSWORD_TIMEOUT=10800
LOGIN_MAX_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900

# =============================================================================
# EXPORT CONFIGURATION
# =============================================================================
EXPORT_MAX_ROWS=10000
EXPORT_CHUNK_SIZE=1000
EXPORT_TEMP_PATH=storage/app/temp/exports
EXPORT_RETENTION_HOURS=24

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
NOTIFICATION_WHATSAPP_ENABLED=true
NOTIFICATION_EMAIL_ENABLED=false
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_PUSH_ENABLED=false

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
DEBUGBAR_ENABLED=false
TELESCOPE_ENABLED=false
LOG_QUERIES=false
LOG_SLOW_QUERIES=true
SLOW_QUERY_THRESHOLD=1000

# =============================================================================
# THIRD PARTY SERVICES
# =============================================================================

# Google Analytics (Optional)
GOOGLE_ANALYTICS_ID=

# Facebook Pixel (Optional)
FACEBOOK_PIXEL_ID=

# Cloudflare (Optional)
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_API_TOKEN=

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=storage/app/backups
BACKUP_COMPRESSION=true
BACKUP_ENCRYPTION=false

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Company Information
COMPANY_NAME="Your Company Name"
COMPANY_ADDRESS="Your Company Address"
COMPANY_PHONE="+62-xxx-xxx-xxxx"
COMPANY_EMAIL="info@yourcompany.com"
COMPANY_WEBSITE="https://yourcompany.com"

# System Defaults
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_TIMEZONE=Asia/Jakarta
DEFAULT_CURRENCY=IDR
DEFAULT_LANGUAGE=id

# =============================================================================
# NOTES
# =============================================================================
# 1. Set APP_KEY by running: php artisan key:generate
# 2. Update database credentials according to your setup
# 3. Configure WhatsApp Gateway credentials from GriyaNet
# 4. Set payment gateway credentials for Tripay/Midtrans
# 5. Update company information with your actual details
# 6. Set appropriate values for production environment
# 7. Enable/disable features based on your requirements
# 8. Configure monitoring and backup settings
# 9. Set security parameters according to your needs
# 10. Test all integrations before going live
